{
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": [
        "*.{cjs,mjs,js,jsx,ts,tsx,d.ts,css,html,graphql}"
      ],
      "options": {
        "useTabs": true
      }
    },
    {
      "files": [
        "*.{json,yml,yaml}"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}